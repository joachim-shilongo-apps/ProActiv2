<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Fragments.ContactsFragment">

    <Button
        android:id="@+id/oshiwambo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="6dp"
        android:background="@drawable/rounded"
        android:padding="6dp"
        android:text="Call Oshiwambo Help Line" />

    <Button
        android:id="@+id/englishHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/oshiwambo"
        android:layout_centerHorizontal="true"
        android:layout_margin="6dp"
        android:background="@drawable/rounded"
        android:padding="6dp"
        android:text="Call English Help line" />

    <Button
        android:id="@+id/herero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/englishHelp"
        android:layout_centerHorizontal="true"
        android:layout_margin="6dp"
        android:background="@drawable/rounded"
        android:padding="6dp"
        android:text="Call Herero help line" />

    <Button
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/oshiwambo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal"
        android:text="ContactUs through different channels"
        android:textColor="@color/black"
        android:textSize="30sp" />
</RelativeLayout>